			<label for="password">confirm password</label>
			<input type="password" name="password_val" id="pwd2" value="" placeholder="password-confirm">
			<label for="name">Screen name</label>
			<input type="text" name="display_name" id="disp_name" value="" placeholder="nickname">
			<input type="submit" id="submit_button" value="Sign up">
		</form>
	</div>
